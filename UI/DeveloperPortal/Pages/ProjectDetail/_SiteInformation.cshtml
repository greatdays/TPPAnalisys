@model DeveloperPortal.Domain.ProjectDetail.SiteInformationModel
@using DeveloperPortal.Domain.ProjectDetail;
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/PageScripts/ProjectDetail/SiteInformation.js"></script>
<style>
    .action-link a {
        display: flex;
    }
</style>
<div class="site-summary w-100">
    <div class="row">
        <div class="col-sm-8">
            <!-- Title -->
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-2">
                <h5 class="h4 mb-0">@Model.SiteName <span class="text-muted">–</span> @Model.FileNumber</h5>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <!-- Address -->
                    <div class="text-secondary mb-3">
                        <span class="fw-semibold me-1">Address:</span>
                        @Model.SiteAddress
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Stats -->
                <div class="row g-3 mb-2">
                    <div class="col-6 col-md-3">
                        <div class="site-stat p-2 rounded border bg-white h-100">
                            <div class="text-muted small"># of Buildings</div>
                            <div class="fs-5 fw-semibold">@Model.NoOfBuildings</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="site-stat p-2 rounded border bg-white h-100">
                            <div class="text-muted small"># of Units</div>
                            <div class="fs-5 fw-semibold">@Model.NoOfUnits</div>
                        </div>
                    </div>

            </div>
           
            
        </div>
    </div>
</div>


<div class="modal fade" id="modal-site-add" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Site</h4>
                <button type="button" class="close" data-bs-dismiss="modal"><i class="far fa-times-circle"></i></button>
            </div>  
            <div class="modal-body">
                <form id="frmSaveAddSite">

                    @Html.HiddenFor(m => m.ProjectID)
                    @Html.HiddenFor(m => m.RefProjectID)
                    @Html.HiddenFor(m => m.IsAddAddress)
                    @Html.HiddenFor(m => m.ProjectSiteID)
                    @Html.HiddenFor(m => m.CaseID, new { @id = "CaseId" })

                    <div class="form-group mb-3">
                    @Html.LabelFor(model => model.APN, "Assessor's Parcel Number (APN)", new { @class = "form-label fw-bold" })
                    <span class="text-danger">*</span>
                        <div class="input-group col-md-6">
                        @Html.TextBoxFor(model => model.APN, new
                            {
                                @class = "form-control",
                                @placeholder = "APN",
                                @id = "APNInput",
                                required = "required",
                                maxlength = 10, 
                                autocomplete = "off"
                            })

                            <div class="input-group-append ml-2">
                            <button class="btn btn-primary" type="button" id="searchAPNButton" onclick="SiteInformation.GetAPNProjectAddress()">Search</button>
                        </div>
                    </div>
                    </div>

                    @* <div class="form-text infotext">Enter the APN and click Search to load available site addresses.</div> *@
                    <div id="APNError" class="text-danger mt-1" style="display: none;">Please enter an APN Number.</div>
                    <div id="noAPNData" class="lert alert-warning mt-2" style="display: none;">
                        We couldn't find the APN you entered. Please verify your APN, then fill out
                        the form below to create a new project site.
                    </div>
                    <div id="validationMessageAPN" class="text-danger mt-1" style="display: none;"></div>
                    <div id="CreateNewProjectSiteId" style="display: none;">
                        <div class="form-group mb-3">
                           @Html.LabelFor(model => model.PropertyName, new { @class = "form-label fw-bold" })
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(model => model.PropertyName, new { @class = "form-control col-md-6", @id = "propertyNameInput", placeholder = "Property Name" })
                        </div>
                        @* <div class="form-text infotext">Public-friendly name for this site/property.</div> *@

                        <div id="apnFoundBlock">
                            <div class="form-group mb-3">
                                <label for="SiteAddressControlSelect" class="fw-bold">Project Address</label><span class="text-danger">*</span>
                                <select class="form-control col-md-6" id="SiteAddressControlSelect" name="siteAddress">
                                    <option value="" disabled selected>Select Project Address</option>
                                </select>
                            </div>
                            <div class="form-check mb-3">
                                @Html.CheckBoxFor(model => model.IsAddAddress, new {
                                                                @class = "form-check-input", @id = "manualAddressCheck",onchange = "SiteInformation.toggleManualAddress()"
                                                                })
                                @Html.LabelFor(model => model.IsAddAddress, "I can’t find the site address — I’ll enter it manually", new { @class = "form-check-label", @for = "manualAddressCheck" })
                            </div>

                        </div>

                        <div id="manualAddressFields" style="display:none;">

                            <div class="row g-3">
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.HouseNum, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.HouseNum, new { @class = "form-control", placeholder = "House #" })
                                   
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.HouseFracNum, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.HouseFracNum, new { @class = "form-control", placeholder = "House fraction" })
                                   
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                              
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.LutPreDirCd, new { @class = "form-label fw-bold" })
                                    <select class="form-control" id="PreDirectionSelect" name="LutPreDirCd">
                                        <option value="" disabled selected>Select Direction</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.StreetName, new { @class = "form-label fw-bold" })
                                    <span class="text-danger">*</span>
                                    @Html.TextBoxFor(model => model.StreetName, new
                                        {@class = "form-control", @id = "StreetNameInput",placeholder = "Street name" })
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                              
                            
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.LutStreetTypeCD, new { @class = "form-label fw-bold" })
                                    <select class="form-control" id="StreetTypeSelect" name="LutStreetTypeCD">
                                        <option value="" disabled selected>Select Street Type</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.City, new { @class = "form-label fw-bold" })
                                    <span class="text-danger">*</span>
                                    @Html.TextBoxFor(model => model.City, new { @class = "form-control", @id = "CityInput", placeholder = "City" })
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.Zip, new { @class = "form-label fw-bold" })
                                    <span class="text-danger">*</span>
                                    @Html.TextBoxFor(model => model.Zip, new { @class = "form-control", @id = "ZipInput",  placeholder = "94103 or 94103-1234" })
                                </div>
                            </div>

                            <div class="form-text mt-2">
                                State is assumed CA. Full address will be computed server-side.
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer multi-button comcom-fotter">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal" title="Cancel">Cancel</button>
                <button class="btn btn-primary" type="button" title="Save" id="saveBtn" style="display:none" onclick="SiteInformation.SaveAddSite()">Save</button>
            </div>
        </div>
    </div>
</div>
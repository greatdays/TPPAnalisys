@model DeveloperPortal.Domain.ProjectDetail.ProjectSummaryModel
<style>
    .site-more-info {
        padding-top: 0px;
         padding-bottom:10px;
        margin-top: 0px;
    }

    /* Compact summary header */
    .tpp-summary {
        border: 1px solid #e5e7eb;
        border-radius: 14px;
        box-shadow: 0 10px 25px rgba(0,0,0,.06);
    }

    .tpp-summary__header {
        background-color: #113F67 !important;
        padding: 10px 14px;
    }

    .tpp-summary__top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        flex-wrap: wrap;
    }

    .tpp-title {
   
        font-size: 16px;
    }

    .tpp-top-right {
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .tpp-status {
        background: #ecfdf5;
        border: 1px solid #d1fae5;
        border-radius: 999px;
        padding: 4px 10px;
/*         font-weight: 600; */
        font-size: 12px;
    }

    /* Pills */
    .tpp-meta {
        list-style: none;
        margin: 8px 0 0;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 6px 8px;
    }

    .tpp-kv {
        display: flex;
        align-items: center;
        gap: 6px;
        border: 1px solid #e5e7eb;
        background: #fff;
        border-radius: 999px;
        font-size: 12px;
     
        padding: 6px 10px;
    }

/*         .tpp-kv > span {
            color: #6b7280;
        }
 */
    /* Toggle button */
    .tpp-toggle {
        border-radius: 999px;
        padding: 4px 8px;
        line-height: 1.2;
    }

    /* Optional body spacer to match your existing card layout */
    .tpp-actions-body {
        background: #fff;
    }


</style>
<br />
<div class="" >
    @{
        <div class="tpp-summary card" id="project-summary" aria-label="Project Summary">
            <div class="card-header tpp-summary__header">
                <div class="tpp-summary__top">
                    <div class="tpp-title">
                        <span class="bold">Project:</span>
                        <span class="cd-value">@Model.ProjectName</span>
                    </div>
                    <div class="tpp-top-right">
                        <span class="tpp-status" id="overall-status">@Model.Status</span>
                    </div>
                </div>

                <!-- pill-style key/values -->
                <ul class="tpp-meta" id="tpp-meta">
                    <li class="tpp-kv"><span>Address:</span><strong>@Model.SiteAddress</strong></li>
                    <li class="tpp-kv"><span>ACHP #:</span><strong>@Model.AcHPFileProjectNumber</strong></li>
                    <li class="tpp-kv"><span>Type of Occupancy:</span><strong>@Model.TypeOfOccupancy</strong></li>
                    <li class="tpp-kv"><span>Status:</span><strong>@Model.Status</strong></li>
                    <li class="tpp-kv"><span>Type of Construction:</span><strong>@Model.CaseType</strong></li>
                    <li class="tpp-kv"><span>Assigned Staff:</span><strong>@Model.AssigneeName</strong></li>
                    <li class="tpp-kv"><span>APN:</span><strong>@(string.IsNullOrWhiteSpace(Model.APN) ? "—" : Model.APN)</strong></li>
                </ul>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
      $(document).ready(function () {
      ProjectInformation.projectActions();
      });
</script>

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddFileModalLabel">Upload File</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            @using (Html.BeginForm("UploadFile", "DMS", FormMethod.Post, new { enctype = "multipart/form-data", id = "uploadForm" }))
            {
                <div class="modal-body">
                    <div class="alert alert-danger" id="uploadError" style="display: none;">
                        <span id="uploadErrorMessage"></span>
                    </div>

                    @Html.Hidden("ProjectId")
                    @Html.Hidden("FolderName")
                    @Html.Hidden("FolderId")


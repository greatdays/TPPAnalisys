@using DeveloperPortal.Domain.ProjectDetail
@model List<DevelopmentTeamModel>
<div id="divDevelopmentTeamList">

    <div class="border-bottom pb-2 mb-3">
        <div class="row align-items-center">
            <div class="col-md-6 col-12">
                <h4 class="mb-0">Development Team List</h4>
            </div>
            <div class="col-md-6 col-12 text-md-end mt-2 mt-md-0">
                <button id="AddNewContact"
                        type="button"
                        class="btn btn-primary"
                        role="button"
                        role-access="true"
                        onclick="DevelopmentTeam.Add()">
                    Add Contact
                </button>
            </div>
        </div>
    </div>

    <div class=" k-box-body" style="padding-top:20px;">
        <div class="col-md-12 modal-body">
            <table id="dtDevelopmentTeamList" class="table table-striped table-bordered align-middle w-100">
                <thead>
                    <tr>
                        <th style="padding: 10px;">Contact Name</th>
                        <th style="padding: 10px;">Company Name</th>
                        <th style="padding: 10px;">Team Role</th>
                        <th style="padding: 10px;">Phone#</th>
                        <th style="padding: 10px;">Mailing Address</th>
                        <th style="padding: 10px;">Email</th>
                        <th style="padding: 10px;">Source</th>
                        <th style="padding: 10px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var participant in Model)
                        {
                            <tr>
                                <td>@participant.ContactName</td>
                                <td> @participant.CompanyName</td>
                                <td>@participant.ContactType</td>
                                <td>@participant.Phone</td>
                                <td>@participant.FullAddress</td>
                                <td>@participant.Email</td>
                                <td>@participant.Source</td>
                                <td style="width:180px">
                                    <div>
                                        <button role="button" data-toggle="tooltip" data-placement="top" class="editbtn btn k-grid-edit btn-sm btn-action" title="Edit" onclick="DevelopmentTeam.Edit(@participant.ContactIdentifierId,@participant.AssnPropContactID,'@participant.CompanyName')"><i class="fas fa-pen editcontent"></i></button>
                                        <button role="button" data-toggle="tooltip" data-placement="top" class="deletebtn btn btn-sm btn-action" title="Delete" onclick="DevelopmentTeam.Delete(@participant.ContactId, '@participant.ContactName', @participant.ContactIdentifierId)"><i class="fas fa-trash-alt deletecontent"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">No participants found for this project.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <div class="modal" id="ContactPopup" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content" id="AddContact">
            </div>
        </div>
    </div>

    <div class="modal" id="DeleteContactPopup" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Delete Confirmation</h4>
                    <button type="button" class="close" data-bs-dismiss="modal"><i class="far fa-times-circle"></i></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input type="hidden" class="deleteContactId" />
                    <input type="hidden" class="deleteContactIdentifierId" />
                    <p>
                        Are you sure you want to delete contact '<span class="contactName"></span>'?
                    </p>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer multi-button">
                    <button type="button" data-bs-dismiss="modal" class="btn btn-light">No</button>
                    <button type="button" class="btn btn-primary" onclick="DevelopmentTeam.DeleteContact()">Yes</button>
                </div>

            </div>
        </div>
    </div>
    <div class="modal show" id="cnt_SuccessErrorPopup" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" style="width:40% !important;">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                </div>
                <!-- Modal body -->
                <div class="modal-body text-center">
                    <p id="cnt_SuccessErrorMsg">
                        Error occurred while Saving Contact.
                    </p>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer singal-button">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        var contactList =  @Html.Raw(Json.Serialize(Model));
</script>
@page
@model DeveloperPortal.Pages.Account.ContactMethodsModel

<div class="form-partial-container">
    <fieldset style="margin-bottom: 2.5em;">
        <legend class="app-form-heading" style="margin-bottom: 0;">Phone Number</legend>
        <div class="text-danger-custom" style="padding-bottom:3%">
            All fields marked with an asterisk <span aria-hidden="true">(*)</span> are required!
        </div>
        <div class="form_body">
            <div class="row">
                <div class="col-md-4 app-input-descr">
                    @Html.Label("", "Phone Type")
                    @Html.Label("", "*", new { @class = "asterisk" })
                </div>
                <div class="col-md-4 app-input-descr">
                    @Html.Label("", "Phone Number")
                    @Html.Label("", "*", new { @class = "asterisk" })
                </div>
                <div class="col-md-4 app-input-descr">
                    @Html.Label("", "Extension")
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.DropDownList("PhoneType", new List<SelectListItem>{
                    new SelectListItem(text:"Select a Phone Type", value:"0")
                    }, null, new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    @Html.TextBox("PhoneNumber", "", new { @class = "form-control", data_required = "true" })
                </div>
                <div class="col-md-4">
                    @Html.TextBox("Extension", "", new { @class = "form-control" })
                </div>
            </div>
        </div>
    </fieldset>

    <hr style="margin-bottom: 4em;">

    <fieldset>
        <legend class="app-form-heading">Mailing Address</legend>
        <div class="form_body" style="margin-bottom: 0;">
            <div class="row align-items-baseline">
                <div class="col-md-12">
                    @Html.Label("", "P.O.Box?", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                    @Html.Label("", "*", new {@class = "asterisk"})
                </div>
                <div class="col-md-12">
                    <label class="radio-label">
                        @Html.RadioButton("POBox", "No") No
                    </label>
                    <label class="radio-label">
                        @Html.RadioButton("POBox", "Yes") Yes
                    </label>
                </div>
            </div>
            <div id="divPOBoxNo" style="width:100%">

                <div class="row align-items-baseline">
                    <div class="col-md-12">
                        @Html.Label("", "Street Number", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                        @Html.Label("", "*", new {@class = "asterisk"})
                    </div>
                    <div class="col-md-12">
                        @Html.TextBox("StreetNumber", "", new { @class = "form-control", data_required = "true" })
                    </div>
                </div>
                <div class="row align-items-baseline">
                    <div class="col-md-12">
                        @Html.Label("", "Street Direction", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                    </div>
                    <div class="col-md-12">
                        @Html.DropDownList("StreetDirection", new List<SelectListItem>{
                        new SelectListItem(text:"Select a Direction", value:"0")
                        }, null, new { @class = "form-control", data_required = "true" })
                    </div>
                </div>
                <div class="row align-items-baseline">
                    <div class="col-md-12">
                        @Html.Label("", "Street Name", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                        @Html.Label("", "*", new {@class = "asterisk"})
                    </div>
                    <div class="col-md-12">
                        @Html.TextBox("StreetName", "", new { @class = "form-control", data_required = "true" })
                    </div>
                </div>
                <div class="row align-items-baseline">
                    <div class="col-md-12">
                        @Html.Label("", "Street Type", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                    </div>
                    <div class="col-md-12">
                        @Html.DropDownList("StreetType", new List<SelectListItem>{
                        new SelectListItem(text:"Select a Street Type", value:"0")
                        }, null, new { @class = "form-control", data_required = "true" })
                    </div>
                </div>
                <div class="row align-items-baseline">
                    <div class="col-md-12">
                        @Html.Label("", "Unit Number", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBox("UnitNumber", "", new { @class = "form-control", data_required = "true" })
                    </div>
                </div>

            </div>
            <div id="divPOBoxYes">
                <div class="col-md-12 padding-zero">
                    @Html.Label("", "P.O.Box", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                    @Html.Label("", "*", new {@class = "asterisk"})
                </div>
                <div class="col-md-12 padding-zero">
                    @Html.TextBox("POBoxNumber","", new { @class = "form-control"})
                </div>
            </div>
            <div class="row align-items-baseline">
                <div class="col-md-12">
                    @Html.Label("", "City", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                    @Html.Label("", "*", new {@class = "asterisk"})
                </div>
                <div class="col-md-12">
                    @Html.TextBox("City", "", new { @class = "form-control", data_required = "true" })
                </div>
            </div>
            <div class="row align-items-baseline">
                <div class="col-md-12">
                    @Html.Label("", "State", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                    @Html.Label("", "*", new {@class = "asterisk"})
                </div>
                <div class="col-md-12">
                    @Html.DropDownList("State", new List<SelectListItem>{
                    new SelectListItem(text:"Select a State", value:"0")}, null, new { @class = "form-control", data_required = "true" })
                </div>
            </div>
            <div class="row align-items-baseline">
                <div class="col-md-12">
                    @Html.Label("", "Zip Code", new { @class = "app-input-descr control-label required-label font-weight-bold" })
                    @Html.Label("", "*", new {@class = "asterisk"})
                </div>
                <div class="col-md-12">
                    @Html.TextBox("ZipCode", "", new { @class = "form-control", data_required = "true" })
                </div>
            </div>
        </div>
    </fieldset>

    <div class="row" style="padding-bottom:5%; margin-top: 3em;">
        <div class="col-md-4">
            <button class="btn-primary-outline prevBtn float-left">Back</button>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <button class="main-btn nextBtn float-right" disabled>Next</button>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        InitializeContactMethods();

        //$('#POBox').click('OnPOBoxChanged');
    });
</script>


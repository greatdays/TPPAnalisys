@model List<DeveloperPortal.Domain.DMS.FileModel>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">No documents found.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Filename</th>
                <th>Category</th>
                <th>Uploader</th>
                <th>Shared</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.UploadedDate.ToShortDateString()</td>
                    <td>@file.Name</td>
                    <td>@file.Category</td>
                    <td>@file.UploadedBy</td>
                    <td>@file.Roles</td>
                    <td>
                        <a href="@file.Link" class="btn btn-sm btn-primary" target="_blank">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

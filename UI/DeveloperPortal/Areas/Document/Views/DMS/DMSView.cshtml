@model DMSModel
@using DeveloperPortal.Areas.Document.Models
@using Newtonsoft.Json

<!-- Required Styles and Scripts -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/pagescripts/dashboard/dashboard.js"></script>
@* <script src="~/pagescripts/dms/dms.js"></script> *@

<!-- Success Toast Notification -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1060;">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="successToastMessage">
                <!-- Success message will be inserted here -->
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<!-- Documents Table -->
<div class="table-responsive">
    <table id="dmsDataTable" class="display table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Date</th>
                <th>Filename</th>
                <th>Category</th>
                <th>Uploader</th>
                <th>Shared</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.FolderModel != null && Model.FolderModel.Files != null && Model.FolderModel.Files.Any())
            {
                foreach (var file in Model.FolderModel.Files)
                {
                    var driveFileId = "";
                    if (!string.IsNullOrEmpty(file.Link))
                    {
                        /*var parts = file.Link.Split('/');
                        var index = Array.IndexOf(parts, "d");
                        if (index >= 0 && index + 1 < parts.Length)
                        {
                            driveFileId = parts[index + 1];
                            }*/
                                                driveFileId = file.Link;
                    }
                    <tr>
                        <td>@file.UploadedDate.ToString("MM/dd/yyyy")</td>
                        <td>
                            <span title="@file.Name">@file.Name</span>
                        </td>
                        <td>@file.Category</td>
                        <td>@file.UploadedBy</td>
                        <td>@file.Roles</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(file.Link))
                            {
                                <a href="javascript:void(0)"
                                   onclick="downloadFileWithProgress('@Url.Action("DownloadDocument", "DMS", new { area = "Document", fileName = file.Name, filePath = driveFileId })', '@file.Name')"
                                   class="btn btn-sm btn-primary" title="Download @file.Name">
                                    <i class="fas fa-download"></i> Download
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="no-data-row">
                    <td colspan="6" class="text-center py-5">
                        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px;">
                            <i class="fas fa-folder-open fa-4x mb-3" style="opacity: 0.3; color: #6c757d;"></i>
                            <h5 class="mb-2" style="color: #6c757d;">No Documents Found</h5>
                            <p class="mb-0 small" style="color: #6c757d;">There are no documents available in this folder</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    string projectIdFromName = "";

    if (Model?.FolderModel?.Name != null)
    {
        var folderNameParts = Model.FolderModel.Name.Split('_');
        projectIdFromName = folderNameParts.Length > 1 ? folderNameParts[^1] : Convert.ToString(Model.ProjectId);
    }
    else
    {
        projectIdFromName = Convert.ToString(Model.ProjectId);
    }
}

<!-- Hidden Inputs -->
<input type="hidden" id="ProjectId" value="@projectIdFromName" />
<input type="hidden" id="FolderName" value="@Model.FolderModel?.Name" />
<input type="hidden" id="FolderId" value="@Model.FolderModel?.Id" />

<!-- Add File Button -->
<div class="btnAddFileDocuments my-3">
    <button type="button" class="btn btn-primary" id="btn-add-file">
        <i class="fas fa-plus-circle me-2"></i>Add File
    </button>
    <button type="button" class="btn btn-outline-secondary ms-2" id="btn-refresh-table" style="display:none" title="Refresh table">
        <i class="fas fa-sync-alt"></i> Refresh
    </button>
</div>

<!-- Include File Upload Modal Partial -->
@await Html.PartialAsync("_FileUploadModal", Model)

<!-- Configuration Script -->
<script>
    // Configure DMS with server-side values
    window.dmsConfig = {
        uploadUrl: '@Url.Action("UploadFile", "DMS")', // Match your existing route
        reloadUrl: 'Document/DMS/GetFilesById', // Match your existing route
        projectId: '@projectIdFromName',
        folderName: '@(Model.FolderModel?.Name ?? "")',
        folderId: '@(Model.FolderModel?.Id ?? "")'
    };

    // Additional initialization
    $(document).ready(function() {
        // Bind refresh button
        $('#btn-refresh-table').on('click', function() {
            if (window.dmsManager) {
                window.dmsManager.reloadDocumentsTab();
            }
        });

        // Initialize tooltips if using Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"], [title]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });

       function downloadFileWithProgress(url, fileName) {
           LoadingOverlay.show();

        fetch(url)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`Download failed: ${response.status}`);
                }
                return response.blob();
            })
            .then(blob => {
                // Create and trigger download
                const downloadUrl = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = downloadUrl;
                a.download = fileName;
                document.body.appendChild(a);
                a.click();

                // Cleanup
                document.body.removeChild(a);
                window.URL.revokeObjectURL(downloadUrl);

                // Hide loading overlay
                LoadingOverlay.hide();
            })
            .catch(error => {
                console.error('Download error:', error);
                LoadingOverlay.hide();
                alert('Download failed');
            });
    }
</script>

